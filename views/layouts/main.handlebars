	<body>
		{{{ body }}}
		<div class="form-group">
			<p>Add a new burger:</p>
			<label class="sr-only" for="user"></label>
			<input type="text" class="form-control" id="burgerName" placeholder="Name your burger">
			<br>
			<label class="sr-only" for="user"></label>
			<textarea class="form-control" rows="4" placeholder="Add a Description"></textarea>
			<br>		
			<input class="btn btn-default" type="submit" value="Submit" id="newBurgerButton">
		</div>
		<script type="text/javascript">
		$("#newBurgerButton").on("click", function(){
			var burgerName = $("#burgerName").val();
			var burgerDescription = $("textarea").val();
			var burgerObj = {
				name: burgerName,
				description: burgerDescription
			};
			
			$.post("/order", burgerObj, function(response){
				console.log(response);
			});
		})
		</script>

	</body>
</HTML>